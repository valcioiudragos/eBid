{% extends 'base.html.twig' %}

{% block product %}

    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm-9">
                    <div class="product-details">
                        <div class="col-sm-5">
                            <h2>{{ product.title }}</h2>
                            <div class="view-product">
                                <img src="{{ product.img }}" alt=""/>
                            </div>
                        </div>
                        <div class="col-sm-7">
                            <div class="product-information">

                                <p>ID: {{ product.id }}</p>
                                <div class="w3-right" style="margin-top: -40%; margin-right: 20%; position: static">
                                <span>
                                    <form action="{{ path('product_bid', {'id': product.id}) }}" method="post">
                                        <p>Bid</p><input type="number" id="bid" name="bid"><br/>
                                        <p>Max Bid</p><input type="number" id="max_bid" name="max_bid"><br/><br/>
                                        <p>Current price {{ product.price }} LEI</p>
                                        <button type="submit" class="w3-button w3-block w3-red" id="append_bid">Bid</button>
                                    </form>
								</span>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="category-tab shop-details-tab">
                        <div class="col-sm-12">
                            <h3><b>Details</b></h3>
                        </div>
                        <div class="tab-content">
                            <p>{{ product.description }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}